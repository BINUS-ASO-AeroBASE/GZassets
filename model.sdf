<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="my_drone">
    <static>false</static>
    
    <!-- Main Body -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.02</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/drone_body.obj</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/drone_body.obj</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    
    <!-- Propeller 1 -->
    <link name="propeller1">
      <pose>0.15 0.15 0 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0002</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/propeller.obj</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/propeller.obj</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    
    <!-- Propeller 2 -->
    <link name="propeller2">
      <pose>0.15 -0.15 0 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0002</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/propeller.obj</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/propeller.obj</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    
    <!-- Propeller 3 -->
    <link name="propeller3">
      <pose>-0.15 0.15 0 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0002</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/propeller.obj</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/propeller.obj</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    
    <!-- Propeller 4 -->
    <link name="propeller4">
      <pose>-0.15 -0.15 0 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0002</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/propeller.obj</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://home/aerobase/drone_model/meshes/propeller.obj</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    
    <!-- Joints for Propeller Rotation -->
    <joint name="joint_propeller1" type="revolute">
      <parent>base_link</parent>
      <child>propeller1</child>
      <pose>0.15 0.15 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14159</lower>
          <upper>3.14159</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>
    <joint name="joint_propeller2" type="revolute">
      <parent>base_link</parent>
      <child>propeller2</child>
      <pose>0.15 -0.15 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14159</lower>
          <upper>3.14159</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>
    <joint name="joint_propeller3" type="revolute">
      <parent>base_link</parent>
      <child>propeller3</child>
      <pose>-0.15 0.15 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14159</lower>
          <upper>3.14159</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>
    <joint name="joint_propeller4" type="revolute">
      <parent>base_link</parent>
      <child>propeller4</child>
      <pose>-0.15 -0.15 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14159</lower>
          <upper>3.14159</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>
    
    <!-- ROS 2 Control Plugin for interfacing with ROS 2 controllers -->
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <robotNamespace>/my_drone</robotNamespace>
      <robotSimType>gazebo_ros2_control/DefaultRobotHWSim</robotSimType>
    </plugin>
    
  </model>
</sdf>
